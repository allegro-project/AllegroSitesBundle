{% if routes|length > 1 %}
<div id="other-langs">
    <i class="fa fa-language"></i>
    &nbsp;
    {% for locale, route in routes %}
    {% if loop.index > 1 %} | {% endif %}
    <a href="{{ route }}">{{ locale }}</a>
    {% endfor %}
&nbsp;
</div>
{% endif %}
