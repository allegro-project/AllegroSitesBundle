<div id="breadcrumbs">
{% if breadcrumbs | length > 1 %}
{% for crumb in breadcrumbs %}
    {% if loop.index > 1 %}&raquo;{% endif %}
    {% if loop.index < breadcrumbs | length %}
        <a href="{{ allg_url(crumb.getPage) }}">{{ crumb.getTitle }}</a>
    {% else %}
        {{ crumb.title }}
    {% endif %}
{% endfor %}
{% endif %}
</div>
