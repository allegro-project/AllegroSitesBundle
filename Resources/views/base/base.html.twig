{%block doctype '<!DOCTYPE html>' %}
<html>
    <head>
        <meta http-equiv="Content-Type" content="text/html" charset="utf-8">
        <title>{% block title %}{% trans %}layout.label.welcome{% endtrans %}{% endblock %}</title>

        {% block metas '' %}

        {% block stylesheets '' %}

        <link rel="shortcut icon" href="{% block favicon_location %}{{ asset('bundles/allegrosites/base/img/favicon.png') }}{% endblock %}">

        {% block head %}{% endblock %}
    </head>

    <body>
        {% block notices %}
            {% for flashType, flashMessages in app.session.flashbag.all %}
            {% for flashMessage in flashMessages %}
            <div class="allegro-flash {{ flashType|replace({'_': '-'}) ~ '-flash' }}">
                {{ flashMessage }}
            </div>
            {% endfor %}
            {% endfor %}
        {% endblock %}

        {% block body 'base.block.body' %}
        {% block javascripts %}
            <!--[if lt IE 9]>
                <script src="http://html5shim.googlecode.com/svn/trunk/html5.js"></script>
            <![endif]-->
        {% endblock %}
    </body>
</html>
